@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>主体页</title>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/MyJs/global.js"></script>
    <script src="~/Scripts/TopBody/Body.js"></script>
    <link href="~/Content/MyCSS/global.css" rel="stylesheet" />
    <style type="text/css">
        html, body, form {
            height: 100%;
            width: 100%;
        }
    </style>
     

</head>
<body onload="Load()">

    <table cellspacing="0" cellpadding="0" style="height: 100%; width:100%;">

        <tr>
            <td style="height: 100%;" valign="top">
                <iframe id="BoardTitle" style="display: block; visibility: inherit; width: 180px; height: 100%;" src='@Url.Action("Left")' frameborder="0" scrolling="yes"></iframe>
            </td>
            <td style="height:100%;">
                <table cellspacing="0" cellpadding="0" border="0" style="height:100%; width:16px;">
                    <tr>
                        <td style="text-align:center;cursor: pointer;width:16px;height:100%;background:url(/images/imgs/main1.gif) repeat; vertical-align:top; padding-top:30px;" onclick="SwitchQryBar();">
                            <span style="display:none;" id="switchPoint" title="关闭/打开左栏">opened</span>
                            <span id="direction" style="color:red; font-weight:bold; font-size:14px;height:100%;">关<br />闭<br />查<br />询</span>
                        </td>
                    </tr>
                </table>
            </td>
            <td style="height: 100%; width: 100%;" valign="top">
                <div id="loadDiv" style="display:block;position:absolute;top:50%;left:40%;"><img src="/images/Loading/8.gif" /></div>
                <iframe id="frmright" style="visibility: inherit; width: 100%; height: 100%;display:none;" name="frmright" src='@Url.Action("List")' frameborder="0" scrolling="auto"></iframe>
            </td>
        </tr>
    </table>

</body>
</html>
