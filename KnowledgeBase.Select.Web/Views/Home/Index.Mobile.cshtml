                <input type="password" name="Password" id="Password">
                <div style="margin-top: 20%;">
                    <input type="submit" class="ui-btn" data-line="true" data-icon="user" value="登录"/>
                    @*<a href="javascript:void(0)" data-role="button" data-transition="flow">登录</a>*@
                    @*<a href="#pagetwo" data-role="button" data-transition="flip">注册</a>*@
                </div>
                @*<div id="loading" style="display:none;margin: 0 auto">
                    <img src="~/Content/ico_loading.gif" />
                </div>*@
            </div>
        }
         
    </div>

    <div data-role="footer" style="text-align: center; background-color: #3388cc; color: #ffffff" data-position="fixed">
