    <link href="~/Scripts/MyJs/jquery.mobile-1.4.5/jquery.mobile-1.4.5.min.css" rel="stylesheet"/>
    <script type="text/javascript">
        function MainPage(data) {
            if (data == "ok") {
                window.location.href = "/Frame/Index";
            } else {
                alert("用户名或密码错误");
            }
        }
    </script>
